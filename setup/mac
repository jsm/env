if [ $# -ne 1 ]
then
    echo "Error in $0 - Invalid Argument Count"
    echo "Syntax: $0 env_directory"
    exit
fi

rm ~/env
rm ~/.bash_profile
rm ~/.profile
rm ~/.gitconfig
rm ~/.emacs
rm -rf ~/.emacs.d
ln -s $1 ~/env
ln -s ~/env/.bash_profile ~/.bash_profile
ln -s ~/env/.profile ~/.profile
ln -s ~/env/.gitconfig ~/.gitconfig
ln -s ~/env/.emacs ~/.emacs
ln -s ~/env/.emacs.d ~/.emacs.d
